pipeline {
    agent { 
        node {
            label 'sshagent'
        }
    }
    triggers {
        pollSCM '*/5 * * * *'
    }

    stages {
	stage('SonarQube Code Analysis') {
            def scannerHome = tool name: 'sonar_scanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation';
            steps {
                dir("${WORKSPACE}"){
                    sh 'java -version'
                    // Run SonarQube analysis for Python
                    script {
                        withSonarQubeEnv('sonar') {
                            sh "echo $pwd"
                            sh "${scannerHome}/bin/sonar-scanner"
		        }
		    }
	        }
            }
	}
        stage('Build') {
            steps {
                dir("${WORKSPACE}"){
                    echo "Building.."
                    sh '''
                        python3 -m venv ./venv
                        . ./venv/bin/activate
                        cd app
                        pip install -r ./requirements.txt
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                    . ./venv/bin/activate
                    cd app
                    python hello.py
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                    echo "doing delivery stuff.."
                '''
            }
        }
    }
    post { 
        always { 
            cleanWs()
        }
    }
}
