pipeline {
    agent { 
        node {
            label 'sshagent'
            }
      }
    triggers {
        pollSCM '*/5 * * * *'
    }

    tools {
      jdk 'jdk_17.0.10'
    }
    stages {
	stage('SonarQube Code Analysis') {
            steps {
                dir("${WORKSPACE}"){
                    // Run SonarQube analysis for Python
                    script {
                        def scannerHome = tool 'SonarQube Scanner 6.1.0.4477';
                        withSonarQubeEnv('sonar') {
                            sh "echo $pwd"
                            sh "${scannerHome}/bin/sonar-scanner -X"
		        }
		    }
	        }
            }
	}
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                cd app
                pip install -r requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                cd app
                python3 hello.py
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''
                echo "doing delivery stuff.."
                '''
            }
        }
    }
}
